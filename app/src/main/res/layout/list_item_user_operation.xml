<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enteredSalesOutletListItem_parentLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/gray_accent_border_top_side_white_background">

    <CheckBox
        android:id="@+id/userOperationListItem_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:button="@drawable/gray_accent_checkbox_selector"
        android:clickable="false" />

    <TextView
        android:id="@+id/userOperationListItem_userOperationTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        tools:text="User Operation Title"/>

</LinearLayout>